// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 我們的使用者簽到簿 ---
model User {
  id        Int      @id @default(autoincrement())
  lineUserId String?  @unique
  name      String?
  email     String?
  course    String?
  createdAt DateTime @default(now())

  welcomeMessageSent Boolean  @default(false)

  // vvv 新增的欄位 vvv
  paymentStatus PaymentStatus @default(UNPAID)
  
  // vvv 付款詳細資訊 vvv
  paymentAmount    String?   // 付款金額
  paymentMethod    String?   // 付款方式
  paymentReference String?   // 付款參考號碼（後五碼等）
  paymentDate      DateTime? // 付款日期
  paymentNotes     String?   // 付款備註
  
  // vvv 報名驗證系統 vvv
  enrollmentCode String? @unique  // 報名碼
  isVerified     Boolean @default(false)  // 是否已驗證
  enrollmentDate DateTime?  // 報名日期
}

// vvv 新增的 Enum vvv
enum PaymentStatus {
  UNPAID // 尚未付款
  PAID   // 已付款
}