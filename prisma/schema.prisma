// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 我們的使用者簽到簿 ---
model User {
  id        Int      @id @default(autoincrement())
  lineUserId String?  @unique
  name      String?
  email     String?
  course    String?
  createdAt DateTime @default(now())

  welcomeMessageSent Boolean  @default(false)

  // vvv 新增的欄位 vvv
  paymentStatus PaymentStatus @default(UNPAID)
  
  // vvv 付款詳細資訊 vvv
  paymentAmount    String?   // 付款金額
  paymentMethod    String?   // 付款方式
  paymentReference String?   // 付款參考號碼（後五碼等）
  paymentDate      DateTime? // 付款日期
  paymentNotes     String?   // 付款備註
  
  // vvv 報名驗證系統 vvv
  enrollmentCode String? @unique  // 報名碼
  isVerified     Boolean @default(false)  // 是否已驗證
  enrollmentDate DateTime?  // 報名日期
  
  // vvv 取消課程系統 vvv
  enrollmentStatus EnrollmentStatus @default(ACTIVE)  // 報名狀態
  cancellationDate DateTime?  // 取消日期
  cancellationReason String?  // 取消原因
  refundStatus RefundStatus @default(NONE)  // 退費狀態
  refundAmount String?  // 退費金額
  refundDate DateTime?  // 退費日期
  
  // vvv 數據歸檔系統 vvv
  archivedAt DateTime?  // 歸檔時間
  archiveReason String?  // 歸檔原因

  // 數據庫索引以提升查詢性能
  @@index([paymentStatus])
  @@index([enrollmentStatus])
  @@index([course])
  @@index([createdAt])
  @@index([paymentStatus, enrollmentStatus])
  @@index([course, paymentStatus])
  @@index([name])
  @@index([archivedAt])
  @@index([refundStatus, archivedAt])
}

// vvv 新增的 Enum vvv
enum PaymentStatus {
  UNPAID      // 尚未付款
  PAID        // 已付款
  PARTIAL     // 部分付款（少付）
  PENDING     // 待補付
}

enum EnrollmentStatus {
  ACTIVE    // 有效報名
  CANCELLED // 已取消
  COMPLETED // 已完成
}

enum RefundStatus {
  NONE      // 無退費
  PENDING   // 退費處理中
  COMPLETED // 退費完成
  REJECTED  // 退費被拒絕
}